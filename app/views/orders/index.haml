%h1 Search Orders by Number
= form_tag(orders_path, method: :get) do
    = label_tag(:number, "Enter Number:")
    = text_field_tag(:search, params[:search])
    = submit_tag ("Search")


%table
    %thead
        %tr
            %th Number
            %th State 
            %th Users email
    %tbody
        - @orders.each do |o|
            %tr
                %td= link_to "#{o.number}", order_path(o.number)
                %td= o.state
                %td= o.user.email